//---------------------------------------------------------------------------
void __fastcall TForm5::Button1Click(TObject *Sender)
{
    //новая игра
	for (i = 0; i < 12; i++) {
		for (j = 0; j < 12; j++) {
			Field[i][j] = 0;
			Bombs[i][j] = 0;
		}
	}
	NewGame();
	DrawGrid1->Repaint(); //обновление
}
